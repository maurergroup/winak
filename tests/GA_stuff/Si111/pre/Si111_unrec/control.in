  #
  #  Physical model settings
  #
    xc               pbe 
    charge           0
#    spin             collinear
     spin      none
#    fixed_spin_moment  1
    relativistic     none
#    relativistic       atomic_zora scalar 1e-9
#    default_initial_moment   0.005
#    override_illconditioning   .true.
  #
  #  SCF convergence settings
  #
    occupation_type  gaussian 0.1
    mixer            pulay
      n_max_pulay             10
      charge_mix_param        0.2
      # ini_linear_mixing     10
      # ini_linear_mix_param  0.05
      # preconditioner kerker 1.5
      # precondition_max_l    0
      # preconditioner turnoff charge 1e-4
      # preconditioner turnoff sum_ev 1e-1
    sc_accuracy_rho  1E-5
    sc_accuracy_eev  1E-3
    sc_accuracy_etot 1E-6
    sc_iter_limit    400
  #
  #  For periodic boundary conditions
  #
    k_grid 8 8 1  
  #
restart restart.dat
  #  For relaxation:
  #
    relax_geometry bfgs 1.e-2
#    relax_unit_cell full
    sc_accuracy_forces  1E-4

